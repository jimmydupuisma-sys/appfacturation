{
  "name": "app-facturation",
  "version": "1.0.11",
  "description": "Application de gestion de factures pour auto-entrepreneur",
  "main": "electron/main.bundle.js",
  "author": "Jimmy",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"wait-on http://localhost:5173 && npm run dev:electron\"",
    "dev:frontend": "npm --prefix frontend run dev",
    "dev:electron": "npm run build:bundle && electron .",
    "build": "npm run build:frontend && npm run build:electron",
    "build:frontend": "npm --prefix frontend run build",
    "build:bundle": "esbuild electron/main.js --bundle --platform=node --target=node20 --outfile=electron/main.bundle.js --external:electron --external:sql.js --external:electron-updater --format=cjs",
    "build:electron": "npm run build:bundle && electron-builder",
    "setup": "npm install && npm --prefix frontend install",
    "capture-docs": "node scripts/capture-docs.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "electron-updater": "^6.8.3",
    "express": "^4.21.0",
    "pdfkit": "^0.15.0",
    "sql.js": "^1.14.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8",
    "esbuild": "^0.24.0",
    "playwright": "^1.58.2",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.jimmy.app-facturation",
    "productName": "App Facturation",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "frontend/dist/**/*"
    ],
    "publish": {
      "provider": "github",
      "owner": "jimmydupuisma-sys",
      "repo": "appfacturation"
    },
    "mac": {
      "category": "public.app-category.business",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "asar": false
  }
}
